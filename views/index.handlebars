<h3>Enter the</h3>
<h1>Nosh Pit!</h1>


<div class="row">
<div class="col-md-6" id="left">
<div class="row">
<h2 id="waiting">Waiting To Be Noshed</h2>
</div>

<div class="row">
<ol>
    {{#each burgers}}
    {{#unless noshed}}
    {{> burgers/burger-block noshed=true}}
    {{/unless}}
    {{/each}}
  </ol>
</div>
</div>

<div class="col-md-6" id="right">
<div class="row">
  <h2 id="noshed">Noshed!</h2>
</div>
<div class="row">
  <ol>
      {{#each burgers}}
      {{#if noshed}}
      {{> burgers/burger-block noshed=false}}
      {{/if}}
      {{/each}}
  </ol>
</div>
</div>
</div>

<div class="row" id="add-one">
<h2>Add a burger</h2>
<form id="create-form">

    <div class="form-group">
      <label for="ca" id="newburg-name">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button id="add-button" type="submit"> Add Burger </button>
  </form>
</div>